<div class="center_area">
  <div class="form_area">
    <h2>Add worker</h2>

    <%= form_with model: [:admin, @worker] do |f| %>
      <div class="form_field">
        <%= f.label :name, 'Name:' %>
        <%= f.text_field :name %>
        <% if @worker.errors.messages_for(:name).any? %>
          <div class="invalid-feedback" style="display: inline;">
            <%= @worker.errors.messages_for(:name).to_sentence %>
          </div>
        <% end %>
      </div>
      <div class="form_field">
        <%= f.label :description, 'Description:' %>
        <%= f.text_field :description %>
      </div>
      <div class="form_buttons">
        <%= f.submit 'Submit', { :class => :button_default } %>
        <%= link_to '<button type="button">Return to list</button>'.html_safe, admin_workers_path %>
      </div>
    <% end %>
  </div>
</div>